    "paths": {
        "/api/heartbeat": {
            "get": {
                "tags": [
                    "system"
                ],
                "summary": "The route for checking the heartbeat of the system.",
                "responses": {
                    "200": {
                        "description": "OK.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/heartbeat_response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "The route for login.",
